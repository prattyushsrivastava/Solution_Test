@model DataAccessLayer.Models.Guard

@{
    ViewData["Title"] = "SignOutPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="Notifications"/>

<h3 align="center">SignOutBadge</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="SignOut" asp-controller="Home" method="post">

            <div class="form-group">
                @Html.DisplayNameFor(model => model.TemporaryBadge)
                <input name="TempBadge" class="form-control" type="text" required />

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="margin-bottom:4px;margin-top:8px;">Sign Out</button>
            </div>

            @*<div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" asp-action="show" style="margin-bottom:4px;margin-top:8px;" />
            </div>*@
        </form>
        
    </div>
</div>
<div class="form-group"style="margin-top:4px">
    <a asp-action="Index" class="btn btn-info">&nbsp;&nbsp; Back &nbsp;</a>
</div>


@section Scripts{
    <script>
        function displayAlertSucess(){

            Swal.fire({
                icon: 'success',
                title: 'Badge has been Signed Out!',
                showConfirmButton: false,
                timer: 10000
            })
            
        }
    </script>
}