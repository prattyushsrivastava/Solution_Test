@model DataAccessLayer.Models.Guard

@{
    ViewData["Title"] = "SignOutPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 align="center">SignOutBadge</h3>


<div class="row">
    <div class="col-md-4">
        <form asp-action="SignOut" asp-controller="Home" method="post">

            <div class="form-group">
                @Html.DisplayNameFor(model => model.TemporaryBadge)
                <input name="TempBadge" class="form-control" type="text" required />

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" onclick="displayAlertSucess()">Sign Out  </button>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" asp-action="show" style="margin-bottom:4px;margin-top:8px;" />
            </div>*@
        </form>
    </div>
</div>


@section Scripts{
    <script>
        function displayAlertSucess(){
            
            swal({
                text: "Hello world!",
                timer:3000
            });
            
        }
    </script>
}